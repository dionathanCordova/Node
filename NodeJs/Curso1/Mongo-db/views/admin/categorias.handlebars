<h2>Lista de categorias</h2>

<hr>
<a href="/admin/categoria/add/"><button class="btn btn-success">Nova Categoria</button> </a>

{{#each categorias}}
    <div class="card">
        <div class="card-body">
            <h3><strong>{{nome}}</strong></h3>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br><br>
            <a href="/admin/categoria/edit/{{_id}}"><button class='btn btn-success'>Editar</button></a><br><br>
            <form action="/admin/categorias/delete" method="POST">
                <input type="hidden" value="{{_id}}" name='id'>
                <button type="submit" class="btn btn-danger">Deletar</button>
            </form>
        </div>
    </div> 
{{else}}
    <h3 class='mt-3'>Nenhuma categoria registrada</h3>
{{/each}}
