<h2>Lista de postagens</h2>

<hr>
<a href="/admin/postagens/add/"><button class="btn btn-success">Nova Postagem</button> </a>
{{#each postagens}}
    <div class="card">
        <div class="card-body">
            <h3><strong>{{titulo}}</strong></h3>
            <small>Descricao: {{descricao}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <small>Conteudo: {{conteudo}}</small><br>
            <small>Data de criação: {{data}}</small><br><br>
            <a href="/admin/postagens/edit/{{_id}}"><button class='btn btn-success'>Editar</button></a><br><br>
            <a href="/admin/postagens/deletar/{{_id}}"><button class='btn btn-danger'>Deletar</button></a><br><br>

